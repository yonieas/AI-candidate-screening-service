# --- Secrets ---
GEMINI_API_KEY="Your-Actual-API-Key-Here"

# --- File Paths ---
# Directory for user-uploaded CVs and reports
UPLOAD_DIR="uploads"
# Directory where the ChromaDB database will be stored
DB_PATH="chroma_db"
# Directory containing the source PDF documents for ingestion (job description, rubrics, etc.)
SOURCE_DOCS_DIR="source_documents"

#Log level for the application. Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# --- DB & Model Names ---
# The name of the collection inside ChromaDB
COLLECTION_NAME="job_screening_docs"
# The generative model for analysis and feedback
GENERATIVE_MODEL_NAME="gemini-2.5-flash"

# The sentence-transformer model used to create vector embeddings
# EMBEDDING_MODEL_NAME="sentence-transformers/all-MiniLM-L6-v2"
# Better model for improved accuracy (but larger and slower)
EMBEDDING_MODEL_NAME="sentence-transformers/all-mpnet-base-v2"

# --- Algorithmic & Performance Tuning ---
# The "creativity" of the LLM. Lower is more deterministic. (0.0 to 1.0)
LLM_TEMPERATURE=0.1
# Number of times to retry a failed LLM API call
LLM_RETRIES=3
# Delay in seconds between retries
LLM_RETRY_DELAY=5
# Number of context documents to retrieve from the vector DB for RAG
RAG_NUM_RESULTS=2